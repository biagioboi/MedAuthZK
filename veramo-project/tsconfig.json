{
  "compilerOptions": {
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}